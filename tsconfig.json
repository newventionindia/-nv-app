{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "nv-header": [
        "dist/nv-header"
      ],
      "nv-header/*": [
        "dist/nv-header/*"
      ],
      "nv-expense": [
        "dist/nv-expense"
      ],
      "nv-expense/*": [
        "dist/nv-expense/*"
      ],
      "nv-invoice": [
        "dist/nv-invoice"
      ],
      "nv-invoice/*": [
        "dist/nv-invoice/*"
      ],
      "nv-shared-services": [
        "dist/nv-shared-services"
      ],
      "nv-shared-services/*": [
        "dist/nv-shared-services/*"
      ],
      "nv-shared-module": [
        "dist/nv-shared-module"
      ],
      "nv-shared-module/*": [
        "dist/nv-shared-module/*"
      ],
      "nv-core": [
        "dist/nv-core"
      ],
      "nv-core/*": [
        "dist/nv-core/*"
      ]
    }
  }
}